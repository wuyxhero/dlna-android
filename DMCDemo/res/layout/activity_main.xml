<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/buttonSearchDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="搜索设备" />


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonSearchDevice"
        android:text="设备列表如下" />

    <ListView
        android:id="@+id/textViewDeviceList"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_above="@+id/button6"
        android:layout_marginBottom="150dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/textView1"/>

    <Button
        android:id="@+id/BtnStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonSearchDevice"
        android:text="开启DMC" />

    <Button
        android:id="@+id/BtnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/BtnStart"
        android:text="关闭DMC" />

    <Button
        android:id="@+id/BtnMenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:text="菜单" />

    <Button
        android:id="@+id/BtnAutoStartTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/BtnGoBack"
        android:text="开始测试" />

    <Button
        android:id="@+id/BtnStopTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/BtnAutoStartTest"
        android:text="停止测试" />

    <Button
        android:id="@+id/BtnGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:text="返回" />

    <Button
        android:id="@+id/BtnSendTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnAutoStartTest"
        android:layout_alignLeft="@+id/BtnAutoStartTest"
        android:text="消息发送自动测试" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnSendTest"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="1次" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button3"
        android:layout_alignBottom="@+id/button3"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button3"
        android:text="4次" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button1"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:text="6次" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/button6"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button6"
        android:text="7次" />

    <Button
        android:id="@+id/button8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/button3"
        android:layout_marginLeft="10dp"
        android:text="8次" />

    <Button
        android:id="@+id/button9"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/button4"
        android:layout_alignLeft="@+id/button4"
        android:layout_marginLeft="10dp"
        android:text="9次" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/button7"
        android:layout_below="@+id/button7"
        android:layout_marginLeft="10dp"
        android:text="2次" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnSendTest"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button2"
        android:text="3次" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/BtnSendTest"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button4"
        android:text="5次" />

    <Button
        android:id="@+id/button10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/button9"
        android:layout_alignBottom="@+id/button9"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/button9"
        android:text="10次" />

    <Button
        android:id="@+id/BtnPushVideo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/BtnMenu"
        android:text="推片" />

</RelativeLayout>